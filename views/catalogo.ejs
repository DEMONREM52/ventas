        });
    });

    // Manejar el cambio en los checkboxes de certificación
    document.querySelectorAll('.certificacion-checkbox').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            filtrarcatalogos();
        });
    });

    // Manejar el cambio en los checkboxes de usuario
    document.querySelectorAll('.usuario-checkbox').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            filtrarcatalogos();
        });
    });

    // Función para filtrar los vehículos
    function filtrarcatalogos() {
        // Obtener las marcas seleccionadas
        var marcasSeleccionadas = [];
        document.querySelectorAll('.marca-checkbox:checked').forEach(function (checkbox) {
            marcasSeleccionadas.push(checkbox.value);
        });

        // Obtener las certificaciones seleccionadas
        var certificacionesSeleccionadas = [];
        document.querySelectorAll('.certificacion-checkbox:checked').forEach(function (checkbox) {
            certificacionesSeleccionadas.push(checkbox.value);
        });

        // Obtener los usuarios seleccionados
        var usuariosSeleccionados = [];
        document.querySelectorAll('.usuario-checkbox:checked').forEach(function (checkbox) {
            usuariosSeleccionados.push(checkbox.value);
        });

        // Mostrar/ocultar los divs de los vehículos según los filtros seleccionados
        document.querySelectorAll('.catalogo').forEach(function (catalogo) {
            var marca = catalogo.getAttribute('data-marca');
            var certificacion = catalogo.getAttribute('data-certificacion');
            var usuario = catalogo.getAttribute('data-usuario-agrego');

            var mostrar = true;

            // Filtrar por marca
            if (marcasSeleccionadas.length > 0 && !marcasSeleccionadas.includes(marca)) {
                mostrar = false;
            }

            // Filtrar por certificación
            if (certificacionesSeleccionadas.length > 0 && !certificacionesSeleccionadas.includes(certificacion)) {
                mostrar = false;
            }

            // Filtrar por usuario
            if (usuariosSeleccionados.length > 0 && !usuariosSeleccionados.includes(usuario)) {
                mostrar = false;
            }

            if (mostrar) {
                catalogo.style.display = 'block';
            } else {
                catalogo.style.display = 'none';
            }
        });
    }

    // Filtrar vehículos al cargar la página
    window.addEventListener('load', function () {
        filtrarcatalogos();
    });
</script>

