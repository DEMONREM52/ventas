<script>
// Función para eliminar acentos (tildes) de un texto
function removerAcentos(texto) {
    return texto.normalize("NFD").replace(/[\u0300-\u036f]/g, "").trim();
}

// Función de búsqueda
document.getElementById('buscador-catalogo').addEventListener('input', function() {
    const searchTerm = removerAcentos(this.value.toLowerCase());  // Eliminar acentos del término de búsqueda
    const searchWords = searchTerm.split(" ").filter(word => word);  // Dividir en palabras el término de búsqueda
    const catalogos = document.querySelectorAll('.catalogo');
    let visibleCatalogos = 0;

    catalogos.forEach(catalogo => {
        const catalogoNombre = removerAcentos(catalogo.getAttribute('data-nombre').toLowerCase());  // Eliminar acentos del nombre
        const catalogoMarca = removerAcentos(catalogo.getAttribute('data-marca').toLowerCase());    // Eliminar acentos de la marca

        // Verificar si todas las palabras del término de búsqueda están en el nombre o la marca del catálogo
        const allWordsMatch = searchWords.every(word => catalogoNombre.includes(word) || catalogoMarca.includes(word));

        if (allWordsMatch) {
            catalogo.style.display = '';
            visibleCatalogos++;
        } else {
            catalogo.style.display = 'none';
        }
    });

    // Actualiza el contador de catálogos visibles
    document.getElementById('catalogoCount').textContent = visibleCatalogos;
});

